<div class="homepage-container">
    <div class="post-homepage" data-post-id="{{id}}">
        <div class="post-div-homepage">
            <div>
                <div class="username-div">
                    <a href="/profile/{{user.id}}" class="username-homepage">{{user.username}}</a>
                </div>
                <div>
                    <section>
                        <h4 class="post-title-homepage">{{post_title}}</h4>
                        <p class="post-text-homepage">{{text}}</p>
                    </section>
                </div>
            </div>
            <div class="comment-section">
                {{>comment is_current_user=is_current_user currentUserId=currentUserId}}
            </div> 
            <hr class="hr-style">
        </div>
    </div>
</div>
