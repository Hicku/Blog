<div class="post" data-post-id="{{id}}">
    <div>
        <div>
        <div class="username-div">
            <a href="/profile/{{user.id}}" class="username-homepage">{{user.username}}</a>
        </div>
            <section>
                <h4 class="post-title">{{post_title}}</h4>
                <p class="post-text">{{text}}</p>
            </section>
        </div>
    </div>
    <div class="comment-section">
        {{>comment is_current_user=is_current_user currentUserId=currentUserId}}
    </div> 
    <hr class="hr-style">
</div>