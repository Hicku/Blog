<div>
    <div>
        <div class="like-comment-buttons">
            <div>
                <button type="submit" class="like-button">
                    Like
                    <span class="likes-count">0</span>
                </button>
            </div>
            <button class="toggle-comments">Comments</button>
        </div>
        <div class="comments-container">
            <div>
                <form>
                    <textarea name="comment" class="new-comment-input" placeholder="Comment..."></textarea>
                    <button type="submit"  class="comment-button">Submit</button>
                </form>
            </div>    
            {{#if comments}}
            {{#each comments as |comment|}}
                <div class="comment">
                    <a href="/profile/{{user.id}}" class="comment-user-details">{{comment.user.username}} {{format_date comment.createdAt}}</a>
                    <p class="comment-text">{{comment.comment_text}}</p>
                </div>
                <hr class="hr-comment">
            {{/each}}
        {{/if}}
        </div>
    </div>
</div>